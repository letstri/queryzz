{
  "name": "queryzz",
  "type": "module",
  "version": "3.1.1",
  "packageManager": "pnpm@9.12.1",
  "description": "queryzz - a lightweight JS library for manipulating URL query parameters. Get, set, and format queries easily.",
  "author": "Valerii Strilets",
  "license": "MIT",
  "homepage": "https://github.com/letstri/queryzz#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/letstri/queryzz.git"
  },
  "bugs": {
    "url": "https://github.com/letstri/queryzz/issues"
  },
  "keywords": [
    "queryzz",
    "query",
    "set",
    "get",
    "format",
    "getQuery",
    "formatQuery",
    "setQuery",
    "typescript",
    "react",
    "vue",
    "useQuery"
  ],
  "exports": {
    ".": {
      "types": "./dist/native/index.d.ts",
      "import": "./dist/native/index.mjs"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.mjs"
    },
    "./vue": {
      "types": "./dist/vue/index.d.ts",
      "import": "./dist/vue/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublish": "npm run lint && npm run test && npm run build",
    "build": "unbuild",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.7.3",
    "@types/react": "^18.3.11",
    "eslint": "^9.12.0",
    "happy-dom": "^15.7.4",
    "react": "^18.3.1",
    "typescript": "^5.6.3",
    "unbuild": "^2.0.0",
    "vite": "^5.4.8",
    "vue": "^3.5.12"
  }
}
